<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.staffnotbook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Staff"
            android:label="Staff"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Add"
            android:label="Add"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Find"
            android:label="Staff List"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".FindBD"
            android:label="Find / Remove / Sort"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>